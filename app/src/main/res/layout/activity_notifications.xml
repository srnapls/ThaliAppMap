<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/notifications"
    tools:context=".Notifications"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:text="@string/Notificationsdeel1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/time"
            android:layout_weight="1"
            android:text="60"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="@string/Notificationsdeel2"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>
    <CheckBox
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="@string/borrel"
        android:id="@+id/BoxBorrel" />
    <CheckBox
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="@string/alv"
        android:id="@+id/BoxALV" />
    <CheckBox
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="@string/party"
        android:id="@+id/BoxParty" />
    <CheckBox
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="@string/workshop"
        android:id="@+id/BoxWorkshop" />
    <CheckBox
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="@string/lecture"
        android:id="@+id/BoxLecture"/>
    <CheckBox
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="@string/other"
        android:id="@+id/BoxDefault"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zet notificatie"
        android:id="@+id/setNotification"
        android:layout_gravity="center_horizontal"
        android:onClick="onSetNotification"/>
</LinearLayout>